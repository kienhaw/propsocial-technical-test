<!DOCTYPE html>
<html>
  <head>
    <title>PropsocialTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/ads">Home</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav ml-3">
          <a class="nav-item nav-link" href="/ads">Ads Listing</a>
          <a class="nav-item nav-link" href="/inquiries">Inquiries</a>
        </div>
        <div class="navbar-nav ml-auto">
          <a class="nav-item nav-link" href="/notifications">Notifications</a>
          <a class="nav-item nav-link" href="/logout">Logout</a>
          <a class="nav-item nav-link"> <%= current_user.first_name %></a>
        </div>
      </div>
    </nav>
    <% end %>
    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
