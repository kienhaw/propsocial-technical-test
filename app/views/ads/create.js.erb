$('p').addClass('d-none');

<% if @ad.present? && @ad.errors.any? %>
  // alert("ERROR(S): <%= j @ad.errors.messages %>")
  <% @ad.errors.messages.each do |key, value| %>
    $("#<%= key %>-error").removeClass("d-none");
    $("#<%= key %>-error").html("<%= key %>  <%= value[0] %>");
  <% end %>
<% elsif @res.present? %>
  <% @res.split(": ")[1].split(", ").each do |errKey| %>
    $("#<%= errKey %>-error").removeClass("d-none");
    $("#<%= errKey %>-error").html("<%= errKey %> is required, cannot be blank!");
  <% end %>
<% else %>
  alert("Ad created");
  $(window.location.replace("/ads"))
<% end %>
